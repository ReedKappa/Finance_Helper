<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.financehelper.presenter.main_package.main_fragment.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_addPurchaseFragment"
            app:destination="@id/addPurchaseFragment">

            <argument
                android:name="wallet_id"
                app:argType="integer"
                android:defaultValue="-1"/>

        </action>
    </fragment>
    <fragment
        android:id="@+id/addPurchaseFragment"
        android:name="com.example.financehelper.presenter.main_package.add_purchase_fragment.AddPurchaseFragment"
        android:label="AddPurchaseFragment">

        <argument
            android:name="wallet_id"
            app:argType="integer"
            android:defaultValue="-1"/>

    </fragment>
</navigation>