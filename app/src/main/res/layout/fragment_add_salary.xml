<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green_middle"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/welcome_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/salary_input"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="34sp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/salary_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roudedstyle"
        android:gravity="center"
        android:hint="@string/input_hint_text"
        android:textColorHint="@color/green_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageLetter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text_id"
        android:inputType="numberDecimal"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/imageLetter"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/letter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_done"
        app:layout_constraintTop_toBottomOf="@+id/salary_input" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/empty_field_warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/salary_input"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/warning_color"
        tools:text="Поле зарплата не может быть пустым"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_dark"
        android:text="@string/ready_button_text"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>