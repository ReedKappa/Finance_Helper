<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green_middle"
    android:padding="16dp">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/remove_bg_ai_1700682429997__1__1"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/add_purchase_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_purchase_welcome_text"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/back_button"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_purchase_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/roudedstyle"
        android:hint="@string/purchase_name_input_hint_text"
        android:gravity="center"
        android:textColorHint="@color/green_dark"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_purchase_text"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_purchase_cost"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/purchase_cost_input_hint_text"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:textStyle="normal"
        android:background="@drawable/roudedstyle"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/green_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_purchase_name"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/empty_field_warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_purchase_cost"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/warning_color"
        android:layout_marginTop="10dp"
        tools:text="Тест"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shopping_cart_svgrepo_com__1__1"
        app:layout_constraintTop_toBottomOf="@+id/empty_field_warning_text" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_dark"
        android:text="@string/ready_button_text"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>