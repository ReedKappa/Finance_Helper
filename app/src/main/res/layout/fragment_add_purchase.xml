<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FA125"
    android:padding="16dp">


    <Button
        android:id="@+id/button_confirm"
        android:layout_width="234dp"
        android:layout_height="47dp"
        android:backgroundTint="#70AA6B"
        android:text="@string/confirm_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="799dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:autoText="false"
        android:text="Добавить покупку"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:autoSizeTextType="none"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="63dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView3"
        android:name="com.example.financehelper.presenter.main_package.main_fragment.MainFragment"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:background="@drawable/roudedstyle"
        tools:layout_editor_absoluteX="9dp"

        tools:layout_editor_absoluteY="135dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView4"
        android:name="com.example.financehelper.presenter.main_package.main_fragment.MainFragment"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:background="@drawable/roudedstyle"
        tools:layout_editor_absoluteX="6dp"

        tools:layout_editor_absoluteY="216dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_purchase_cost"
        android:layout_width="315dp"
        android:layout_height="36dp"
        android:hint="@string/purchase_cost_input_hint_text"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="225dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_purchase_name"
        android:layout_width="315dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="148dp"
        android:hint="@string/purchase_name_input_hint_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="408dp"
        android:layout_height="342dp"
        app:srcCompat="@drawable/shopping_cart_svgrepo_com__1__1"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="385dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="51dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/remove_bg_ai_1700682429997__1__1"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>